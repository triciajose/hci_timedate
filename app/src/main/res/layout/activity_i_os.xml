<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:theme="@style/CustomTheme"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.example.hciproject.hcitimedate.iOSActivity">

    <TextView
    android:layout_width="200dp"
    android:layout_height="50dp"
    android:id="@+id/in_date_ios"
    android:layout_marginTop="94dp"
    android:textSize="12pt"
    android:layout_alignParentTop="true"></TextView>
    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/in_time_ios"
        android:textSize="12pt"
        android:layout_alignTop="@+id/in_date_ios"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"></TextView>
    <DatePicker
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:layout_centerVertical="true"></DatePicker>

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/datePicker"
        android:layout_toEndOf="@+id/datePicker"></TimePicker>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/ok"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/in_date_ios"
        android:layout_alignEnd="@+id/in_date_ios"
        android:layout_marginBottom="60dp" />

</RelativeLayout>
